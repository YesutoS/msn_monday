<%= form_with(model: @very_best, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :notes %>

    <%= f.text_field :notes, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :dish_id %>

    <%= f.collection_select :dish_id, Dish.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :venue_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :user_id %>

    <%= f.text_field :user_id, class: "form-control" %>
  </div>

  <%= f.submit "Create very best", class: "btn btn-block btn-outline-secondary" %>
<% end %>
